dnl Process this file with autoconf to produce a configure script.
AC_INIT(zabbix_sucker.c)

dnl Checks for programs.
AC_PROG_CC

dnl Checks for libraries.
dnl Replace `main' with a function in -lmysqlclient:
AC_CHECK_LIB(mysqlclient, main)
AC_CHECK_LIB(pq, main)
AC_CHECK_LIB(snmp, main)

dnl Checks for header files.
AC_HEADER_STDC

#include <ucd-snmp/ucd-snmp-config.h>
#include <ucd-snmp/ucd-snmp-includes.h>
#include <ucd-snmp/system.h>


AC_CHECK_HEADERS(stdio.h stdlib.h unistd.h netdb.h signal.h \
  syslog.h time.h errno.h sys/types.h sys/stat.h netinet/in.h \
  sys/socket.h ucd-snmp/ucd-snmp-config.h ucd-snmp/system.h \
  ucd-snmp/ucd-snmp-includes.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_TYPE_PID_T

dnl Checks for library functions.
AC_TYPE_SIGNAL
AC_CHECK_FUNCS(socket strtod)

AC_CONFIG_HEADER(config.h)
AC_OUTPUT(Makefile)
